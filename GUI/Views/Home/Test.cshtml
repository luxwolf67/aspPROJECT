
@{
    ViewBag.Title = "Test";
}

<h2>@ViewBag.Title</h2>


<h3>@ViewBag.Message</h3>


<div class="container">

    <div class="row d-xl-none"> Caché en XL</div>
    <div class="row d-lg-none"> Caché en LG</div>
    <div class="row d-md-none"> Caché en MD</div>
    <div class="row d-sm-none"> Caché en SM</div>

    <div class="row test-pt py-3 ">
        <div class="test col-xl-1 col-lg-2 col-md-3 col"> yolo</div>
        <div class="test col-xl-1 col-lg-2 col-md-3 col"> yolo</div>
        <div class="test col-xl-1 col-lg-2 col-md-3 col"> yolo</div>
        <div class="test col-xl-1 col-lg-2 col-md-3 col"> yolo</div>
        <div class="test col-xl-1 col-lg-2 col-md-3 col"> yolo</div>
        <div class="test col-xl-1 col-lg-2 col-md-3 col"> yolo</div>
        <div class="test col-xl-1 col-lg-2 col-md-3 col"> yolo</div>
        <div class="test col-xl-1 col-lg-2 col-md-3 col"> yolo</div>
        <div class="test col-xl-1 col-lg-2 col-md-3 col"> yolo</div>
        <div class="test col-xl-1 col-lg-2 col-md-3 col"> yolo</div>
        <div class="test col-xl-1 col-lg-2 col-md-3 col"> yolo</div>
        <div class="test col-xl-1 col-lg-2 col-md-3 col"> yolo</div>
    </div>
    <div class="row test-pt py-3">
        @{
            for (int i = 0; i < 12; i++)
            {
                int classe = i % 6;
                string orientation = i >= 6 ? "my": "mx";
                string padding = i <= 6 ? "py" : "px";
                <div class="test col-12 @padding-@classe @orientation-@classe "> Yolo: @i</div>
            }
        }
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.col').html("<p>Paragraphe</p>");
        $('.col').addClass("text-center");
        $('.col').on('mouseenter', function () {
            $('.col').css('border', 'dashed 1px red ');
        });
        $('.col').on('mouseleave', function () {
            $('.col').css('border', 'solid 1px black ');
        });
    });
</script>